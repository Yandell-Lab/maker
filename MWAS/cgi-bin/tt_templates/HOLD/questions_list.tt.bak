[% WRAPPER main.tt %]

[% INCLUDE questions_menu.tt %]

<center><h3>Listing of Questions</h3></center>

[% FOREACH quiz = quizzes.sort('quiz_number') %]
  <table border cellspacing=0 cellpadding=5>
    <tr>
      <th colspan=2 ><h3>Quiz Number [% quiz.quiz_number %]</h3></th>
    </tr>
    <tr>
      <td colspan=2 ><center><a href="/cgi-bin/Course/course_questions.cgi?rm=questions_add&quiz_id=[% quiz.quiz_id %]&question_number=[% quiz.next_question_number %]"><font color="darkred"><i>Add a question to this quiz</i></font></a></center></td>
    </tr>
  [% questions = quiz.questions %]
  [% FOREACH question = questions.sort('question_number') %]
    <tr>
      <td>Question ID:</td>
      <td>[% question.question_id %]</td>
    </tr>
    <tr>
      <td>Quiz ID:</td>
      <td>[% question.quiz_id %]</td>
    </tr>
    <tr>
      <td>Question Number:</td>
      <td>[% question.question_number %]</td>
    </tr>
    <tr>
      <td>Question Text:</td>
      <td>
        <pre>[% question.question_text %]</pre>
      </td>
    </tr>
    <tr>
      <td>Question Options:</td>
      <td>
        <pre>[% question.question_options %]</pre>
      </td>
    </tr>
    <tr>
      <td colspan=2>
	<center>
	<a href="/cgi-bin/Course/course_questions.cgi?rm=questions_edit&question_id=[% question.question_id %]">
	  <font color='darkred'><i>Edit This Question</i></font>
        </a>
	&nbsp;&nbsp;&nbsp;
	<a href="/cgi-bin/Course/course_questions.cgi?rm=questions_delete_process&question_id=[% question.question_id %]">
	  <font color='darkred'><i>Delete This Question</i></font>
        </a>
	</center>
      </td>
    </tr>
    <tr>
      <td colspan=2 bgcolor='black'></td>
    </tr>
  [% END %]
  </table>
  <br />
[% END %]

[% END %]
