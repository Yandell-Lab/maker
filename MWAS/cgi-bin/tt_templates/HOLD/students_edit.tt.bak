
[% WRAPPER main.tt %]

[% INCLUDE students_menu.tt %]

<center><h3>Edit Students</h3></center>

<form method="POST" action="/cgi-bin/Course/course_students.cgi">
<input type="hidden" name="rm" value="students_edit_process">

<center>
<table>
  <tr>
    <td>DB ID:</td>
    <td>    
	<input type="hidden" name="student_id" value="[% student.student_id %]">
	[% student.student_id %]
    </td>
  </tr>
  <tr>
    <td>Last Name:</td>
    <td>    
        <input type="text" size=20 maxlength=20 name="last_name" value="[% student.last_name %]">
    </td>
  </tr>
  <tr>
    <td>First Name:</td>
    <td>    
      <input type="text" size=20 maxlength=20 name="first_name" value="[% student.first_name %]">
    </td>
  </tr>
  <tr>
    <td>E-mail:</td>
    <td>    
      <input type="text" size=30 maxlength=30 name="e_mail" value="[% student.e_mail %]">
    </td>
  </tr>
  <tr>
    <td>uID:</td>
    <td>    
      <input type="text" size=9 maxlength=9 name="u_id" value="[% student.u_id %]">
    </td>
  </tr>
</table>

<br />

<input type="submit" value="Update Students">
</form>

[% END %]

